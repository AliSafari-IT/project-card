{
  "name": "@asafarim/project-card",
  "version": "1.0.3",
  "description": "A React component for displaying project cards with title, image, description, tech stack, and links.",
  "main": "dist/index.js",
  "type": "module",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "demo",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "all": "pnpm i && pnpm run build",
    "watch": "rollup -c -w",
    "prepare": "npm run build",
    "clean": "rm -rf dist",
    "demo": "pnpm build && cd demo && pnpm run build && pnpm dev",
    "gp": "cd demo && gh-pages -d dist && echo 'Deployed to GitHub Pages'",
    "pregp": "pnpm run build && echo 'Deploying to GitHub Pages'"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@asafarim/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "rollup": "^3.29.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AliSafari-IT/project-card.git"
  },
  "keywords": [
    "asafarim",
    "react",
    "project",
    "card",
    "showcase",
    "component",
    "typescript"
  ],
  "author": "Ali Safari",
  "license": "MIT",
  "homepage": "https://alisafari-it.github.io/project-card",
  "bugs": {
    "url": "https://github.com/AliSafari-IT/project-card/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}